<style is:global>
    @font-face {
        font-family: "FuturaPT Demi";
        src: url("/fonts/FuturaCyrillicDemi.woff2") format("woff");
    }

    h1 {
        font-family: "FuturaPT Demi", sans-serif;
    }
    body {
        overflow-x: hidden !important;
    }
    p,
    h3,
    h4,
    h5,
    h6 {
        font-family: "Poppins", sans-serif;
    }
    .hover-underline-animation {
        @apply relative inline-block;
    }

    .hover-underline-animation::after {
        @apply absolute bottom-0 left-0 h-[2px] w-full origin-left scale-x-0 bg-black transition-all ease-in-out content-[''] dark:bg-white;
    }

    .hover-underline-animation:hover::after {
        @apply scale-x-100;
    }
    .hover-underline-animation-footer {
        @apply relative inline-block;
    }

    .hover-underline-animation-footer::after {
        @apply absolute bottom-0 left-0 h-[2px] w-full origin-left scale-x-0 bg-black transition-all ease-in-out content-[''] dark:bg-light-gray;
    }

    .hover-underline-animation-footer:hover::after {
        @apply scale-x-100;
    }
    ::-moz-selection {
        /* Code for Firefox */
        color: white;
        background: #7846e3;
    }

    ::selection {
        color: white;
        background: #7846e3;
    }

    .carousel-img {
        max-width: 100px;
        transition: transform 0.3s ease-in-out;
    }

    .animate-scrolling {
        display: flex;
        animation: scroll 20s linear infinite;
    }

    @keyframes scroll {
        0% {
            transform: translateX(80%);
        }
        100% {
            transform: translateX(-20%);
        }
    }
    input[type="text"],
    input[type="number"],
    textarea {
        font-size: 16px;
    }
    /* Add styles for disabled state */
    input:disabled,
    button:disabled,
    select:disabled {
        cursor: not-allowed;
        opacity: 0.5;
    }

    .hover-underline-animation:disabled::after,
    .hover-underline-animation-footer:disabled::after {
        background: gray; /* Change the underline color to indicate disabled state */
        cursor: not-allowed;
        scale-x: 0; /* Prevent the underline animation */
    }

    .disabled {
        pointer-events: none;
        opacity: 0.5;
    }

    button.disabled,
    a.disabled {
        cursor: not-allowed;
        text-decoration: none;
    }
</style>
